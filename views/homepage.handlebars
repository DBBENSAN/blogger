{{#each userPost as |post|}}
<div class="post-card">
   <h2 class="post-title">{{this.name}}</h2>
   <div class="post-content">
      <p class="post-body">{{this.body}}</p>
      <p class="post-username">By: {{this.username}}</p>
   </div>
   <div class="comments-container">
      {{> comments}}
   </div>
</div>
{{/each}}